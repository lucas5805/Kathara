#!/bin/bash

ip addr add 192.168.4.62/26 dev eth0
ip addr add 192.168.4.126/26 dev eth1
ip addr add 192.168.50.46/30 dev eth2
ip addr add 192.168.50.65/30 dev eth3

# Configurar MTU y activar interfaces
ip link set eth0 mtu 1500
ip link set eth1 mtu 1500
ip link set eth2 mtu 1500
ip link set eth3 mtu 1500
ip link set eth0 up
ip link set eth1 up
ip link set eth2 up
ip link set eth3 up

# Habilitar IP forwarding
echo 1 > /proc/sys/net/ipv4/ip_forward

# Rutas estaticas
bash /hostlab/rhi/rutas.conf

systemctl start quagga
